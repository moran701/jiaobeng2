local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "MemeCatGUI"
ScreenGui.Parent = game.Players.LocalPlayer.PlayerGui

local BackgroundFrame = Instance.new("Frame")
BackgroundFrame.Name = "BackgroundFrame"
BackgroundFrame.Size = UDim2.new(0.7, 0, 0.98, 0)
BackgroundFrame.Position = UDim2.new(0.15, 0, 0, 0)
BackgroundFrame.BackgroundColor3 = Color3.new(0, 0, 0)
BackgroundFrame.BorderSizePixel = 0
BackgroundFrame.BackgroundTransparency = 1
BackgroundFrame.Parent = ScreenGui

local Corner = Instance.new("UICorner")
Corner.CornerRadius = UDim.new(0, 15)
Corner.Parent = BackgroundFrame

local CatImage = Instance.new("ImageLabel")
CatImage.Name = "CatImage"
CatImage.Size = UDim2.new(0.7, 0, 0.6, 0)
CatImage.Position = UDim2.new(0.15, 0, 0.05, 0)
CatImage.BackgroundTransparency = 1
CatImage.Image = "rbxassetid://97026353140946"
CatImage.ScaleType = Enum.ScaleType.Fit
CatImage.Parent = BackgroundFrame

local StartButton = Instance.new("TextButton")
StartButton.Name = "StartButton"
StartButton.Size = UDim2.new(0.5, 0, 0.2, 0)
StartButton.Position = UDim2.new(0.25, 0, 0.7, 0)
StartButton.BackgroundColor3 = Color3.new(1, 1, 1)
StartButton.Text = "进入脚本"
StartButton.TextColor3 = Color3.new(0, 0, 0)
StartButton.TextScaled = true
StartButton.Font = Enum.Font.SourceSansBold
StartButton.BackgroundTransparency = 1
StartButton.Parent = BackgroundFrame

local ButtonCorner = Instance.new("UICorner")
ButtonCorner.CornerRadius = UDim.new(0, 25)
ButtonCorner.Parent = StartButton

local TweenService = game:GetService("TweenService")
local fadeInInfo = TweenInfo.new(0.8, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
local fadeInTween = TweenService:Create(BackgroundFrame, fadeInInfo, {BackgroundTransparency = 0})
fadeInTween:Play()

local buttonFadeIn = TweenService:Create(StartButton, fadeInInfo, {BackgroundTransparency = 0})
buttonFadeIn:Play()

StartButton.MouseButton1Click:Connect(function()
    local clickTween = TweenService:Create(StartButton, TweenInfo.new(0.5, Enum.EasingStyle.Quad), {
        Size = UDim2.new(0, 0, 0, 0),
        BackgroundTransparency = 1,
        TextTransparency = 1
    })
    clickTween:Play()
    
    local imageFadeOut = TweenService:Create(CatImage, TweenInfo.new(0.8, Enum.EasingStyle.Quad), {
        ImageTransparency = 1
    })
    imageFadeOut:Play()
    
    local closeTween = TweenService:Create(BackgroundFrame, TweenInfo.new(0.8, Enum.EasingStyle.Quad), {
        BackgroundTransparency = 1
    })
    closeTween:Play()
    
    closeTween.Completed:Connect(function()
        ScreenGui:Destroy()
        print("脚本已启动并结束")
        task.wait(0.5)
        return
    end)
end)
